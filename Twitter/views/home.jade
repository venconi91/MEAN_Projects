div(class="container")
  div(class="row")
    div(class="col-md-4")
      div(class="row")
        div(class="well")
          div(class="col-md-4") IMG
          div(class="col-md-8") Name, View
      div(class="well bs-component")
        form(class="form-horizontal")
          fieldset
            legend Create tweet
            div(class="form-group")
              label(for="username" class="col-md-2 control-label") Tweet
              div(class="col-md-10")
                textarea(class="form-control" rows = 3 ng-model="tweet.tweetContent")
            div(class="form-group")
              div(class="col-lg-10 col-lg-offset-1")
                button(type="submit" class="btn btn-primary" ng-click="create(tweet)") Tweet
                button(type="reset" class="btn btn-default") Reset
      div(class="row")
        div(class="well") trends
    div(class="col-md-7 col-md-offset-1")
      div(class="row")
        div(class="well") Followings
        each following in userFollowers.followings
          div(class="row")
            div(class="well well-lg") #{following.username}
              button(class="btn btn-success btn-btn-small pull-right" ng-click="viewUserTweets('#{following._id}')") view tweets
      
